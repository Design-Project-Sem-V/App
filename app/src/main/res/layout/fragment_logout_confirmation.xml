<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkthemebg"
    android:padding="15dp"
    tools:context=".LogoutConfirmation">

    <!--            Heading         -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:padding="2dp"
            android:background="@drawable/heading_grad">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/label_font_size"
                android:paddingHorizontal="50dp"
                android:paddingVertical="10dp"
                android:background="@drawable/darkbg_10"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="25dp"
            android:background="@drawable/logout_box_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingVertical="20dp"
                android:text="Are you sure you want to logout?"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <!--            Cancel      -->
                <RelativeLayout
                    android:id="@+id/cancel"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/cancel_btn_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins"
                        android:text="Cancel"
                        android:textColor="@color/danger_color"
                        android:textSize="14sp" />
                </RelativeLayout>

                <!--            Confirm         -->
                <RelativeLayout
                    android:id="@+id/confirm"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/danger_btn_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins"
                        android:text="Confirm"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>