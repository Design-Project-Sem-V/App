<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkthemebg"
    android:padding="15dp"
    tools:context=".Signup">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="2dp"
        android:background="@drawable/login_signup_grad">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/darkbg_15"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:padding="15dp">


            <!--            Login Or Signup-->
            <LinearLayout
                android:id="@+id/menu"
                android:transitionName="transition0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--                Login-->
                <LinearLayout
                    android:id="@+id/login"
                    android:transitionName="transition1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Login"
                        android:textColor="@color/white"
                        android:textSize="@dimen/label_font_size"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"/>
                </LinearLayout>
                <!--                Signup-->
                <LinearLayout
                    android:id="@+id/signup"
                    android:transitionName="transition2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Signup"
                        android:textColor="@color/white"
                        android:textSize="@dimen/label_font_size"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/white"/>
                </LinearLayout>
            </LinearLayout>



            <!--            Form        -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-5dp">

                <!--                Name                -->
                <RelativeLayout
                    android:transitionName="transition3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/input_bg"
                    android:layout_marginVertical="@dimen/input_mv">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins"
                        android:hint="Full Name"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="12sp" />
                </RelativeLayout>

                <!--                Email                -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/input_bg"
                    android:layout_marginVertical="@dimen/input_mv">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="12sp" />
                </RelativeLayout>

                <!--                Password        -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/input_bg"
                    android:layout_marginVertical="@dimen/input_mv">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="12sp" />
                </RelativeLayout>


                <!--                Signup Button        -->
                <RelativeLayout
                    android:id="@+id/signup_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_bg"
                    android:layout_marginVertical="@dimen/input_mv">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins"
                        android:padding="10dp"
                        android:text="Signup"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>